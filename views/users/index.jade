extends ../layout


block content
  form(method='POST' action="/meeting/scheduleOne")
    p.lead Schedule One
      .form-group
        input.form-control(type='email', name='personOne', id='personOne', placeholder='Email')
      .form-group
        input.form-control(type='email', name='personTwo', id='personTwo', placeholder='Email')
      .form-group
          button.btn.btn-primary(type='submit') Submit
  form(method='POST' action="/meeting/schedule")
    p.lead Schedule All
      .form-group
        input.form-control(type='text', name='group', id='group', placeholder='Group')
      .form-group
        input.form-control(type='text', name='date', id='date', placeholder='Date')
      .form-group
          button.btn.btn-primary(type='submit') Submit
  p.lead Hello list : )
  each u in users
    div email:<strong>#{u.email}</strong> - id:#{u.id} - Group:<strong>#{u.group}</strong> - available:<strong>#{u.available}</strong> - confirmed:#{u.confirmed} - scheduled:#{u.scheduled} - facebook:#{u.profile.picture}/#{u.facebook}
      form(method='POST' action="/account/delete" style="display:inline-block;")
        input(type='hidden', name='id', value='#{u.id}')
        button.btn(style="margin-left:10px;border:1px solid #bbb;") Delete
    br

