extends ../slimLayout

block content
	div.flash-message
		div.logo Sign up
	if errors.length
		.alert.alert-danger.animated.fadeIn
		for error in errors
			div= error.msg

	form.form-horizontal(id='signup-form', method='POST')
		.form-group
			.col-sm-offset-4.col-sm-5 It will be more difficult to identify you. Consider signing up with Facebook.
		.form-group
			label.col-sm-4.control-label(for='email') Email
			.col-sm-5
				input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus)
			.form-group
			label.col-sm-4.control-label(for='username') Username
			.col-sm-5
				input.form-control(type='text', name='username', id='username', placeholder='Username', autofocus)
			.form-group
			label.col-sm-4.control-label(for='username') Password
			.col-sm-5
				input.form-control(type='password', name='password', id='password', placeholder='Password')
		.form-group
			label.col-sm-4.control-label(for='username') Confirm Password
			.col-sm-5
				input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password')
		.form-group
			.col-sm-offset-4.col-sm-5
				button.btn.btn-primary(type='submit')
					i.fa.fa-check
					| Signup 
				&#160;&#124;&#160; 
				a(href="/login") back
