extends ../layout

block content

  form(method='POST' action="/group/secret")
    p.lead Enter your group secret
      .form-group
        input.form-control(type='text', name='secret', id='secret', placeholder='Secret', autofocus=true)
      .form-group
          button.btn.btn-primary(type='submit') Submit

  if user
    .alert.alert-success.animated.fadeInUp
      i.fa.fa-check
      strong Success!
      |  You are logged in.
